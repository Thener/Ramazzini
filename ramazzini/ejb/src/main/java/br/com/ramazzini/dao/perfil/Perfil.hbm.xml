<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<query name="Perfil.recuperarTelasPorPerfil">
		<![CDATA[
            select t
              from Perfil p
              left join p.telas t
              left join t.modulo
             where p = :perfil
		]]>
	</query>		
</hibernate-mapping>