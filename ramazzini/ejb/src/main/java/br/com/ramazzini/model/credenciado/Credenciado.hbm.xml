<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<query name="Credenciado.recuperarPorNome">
		<![CDATA[
			select 
				c	
			from 
				Credenciado c
			where 
				lower(c.nome) like lower(:nome)
			order 
				by c.nome
		]]>
	</query>

</hibernate-mapping>