<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<query name="Grupo.recuperarPorNome">
		<![CDATA[
			select 
				g			
			from 
				Grupo g
			where 
				lower(g.nome) like lower(:nome)
			order 
				by g.nome
		]]>
	</query>

</hibernate-mapping>