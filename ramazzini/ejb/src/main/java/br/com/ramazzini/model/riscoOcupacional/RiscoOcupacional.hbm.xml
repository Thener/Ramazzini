<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<query name="RiscoOcupacional.recuperarPorNome">
		<![CDATA[
			select 
				r			
			from 
				RiscoOcupacional r
			where 
				lower(r.nome) like lower(:nome)
			order 
				by r.nome
		]]>
	</query>

</hibernate-mapping>